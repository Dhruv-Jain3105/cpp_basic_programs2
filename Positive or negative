#include<iostream>
using namespace std;
int main() 
{
    cout << "Enter  a number: ";
    int n;
    cin >> n;
    if (n>0)
    {
        cout << "The Number is Positive" << endl;
    }
    else if (n < 0) 
    {
        cout << "The Number is Negative" << endl;
    } 
    else 
    {
        cout << "The Number is Zero" << endl;
    }
    return 0;
}
